@page
@model uBuntuSouthAfrica.Pages.Donates.AddDisasterModel
@{
}

<style>
    body {
        background-image: url('/images/f19.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

</style>

<br>

<h1 style="text-align: center; font-weight:bold; color:purple;">Disasters that are in need</h1>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warming alert-dismissible fade show' role="alert">
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">

        <label class="col-sm-3 col-form-label"> Disaster Name <p style="color:orangered; font-size:14px;">(Optional)</p></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="DisasterName" value="@Model.disasterInfo.DisasterName">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Location" value="@Model.disasterInfo.Location">
        </div>
    </div>
      <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Description" value="@Model.disasterInfo.Description">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Donation Type</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="DonationType" value="@Model.disasterInfo.DonationType">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class='alert alert-warming alert-dismissible fade show' role="alert">
            <strong>@Model.successMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary" style="background-color:purple; border-color:purple;">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Identity/Donates/DisasterIndex" role="button" style="background-color:orange; border-color:orange;">Cancel</a>
        </div>
    </div>
</form>


